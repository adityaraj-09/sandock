# Server Configuration
PORT=3000
WS_PORT=3001
NODE_ENV=development

# Security
JWT_SECRET=your-jwt-secret-change-in-production

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/insien_sandbox
REDIS_URL=redis://localhost:6379

# Docker Configuration
AGENT_IMAGE=sandbox-agent:latest
ORCHESTRATOR_HOST=host.docker.internal

# Resource Limits - Container
CONTAINER_MEMORY_LIMIT=536870912  # 512MB in bytes
CONTAINER_MEMORY_SWAP=536870912   # Same as memory (no swap)
CONTAINER_CPU_SHARES=512          # Relative CPU weight
CONTAINER_CPU_PERIOD=100000       # 100ms
CONTAINER_CPU_QUOTA=50000         # 50% of one core
CONTAINER_STORAGE_SIZE=1G         # 1GB disk limit

# Resource Limits - User Quotas
MAX_SANDBOXES_PER_USER=5          # Max sandboxes per user
MAX_SANDBOXES_PER_API_KEY=3       # Max sandboxes per API key
SANDBOX_LIFETIME_HOURS=24         # Sandbox lifetime in hours
MAX_EXPOSED_PORTS=5               # Max ports per sandbox

# Resource Limits - System
MAX_TOTAL_SANDBOXES=100           # System-wide sandbox limit
CLEANUP_INTERVAL_MINUTES=15       # Cleanup interval
STALE_CONNECTION_TIMEOUT=30       # Stale connection timeout (minutes)
CONTAINER_STARTUP_TIMEOUT=60      # Container startup timeout (seconds)

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOG_LEVEL=INFO                    # ERROR, WARN, INFO, DEBUG

# Monitoring (Optional)
ENABLE_METRICS=false
METRICS_PORT=9090

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
ADMIN_EMAIL=admin@insien.com
